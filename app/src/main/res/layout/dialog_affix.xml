<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/affix_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/affix_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:text="Affix"
            android:textColor="@color/md_dark_primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/affix_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_affix_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="15dp"
                    android:weightSum="10.0">

                    <ImageView
                        android:id="@+id/affix_vertical_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                        android:layout_weight="2.0"
                        android:src="@drawable/affix_vertical" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.0"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/affix_vertical_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Affix_vertical"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/affix_vertical_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set the orientation,horizontal by default."
                            android:textColor="@color/md_grey_400"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/affix_vertical_switch"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.0"
                        android:checked="false"
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:hapticFeedbackEnabled="true"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_save_here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="15dp"
                    android:weightSum="10.0">

                    <ImageView
                        android:id="@+id/save_here_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                        android:layout_weight="2.0"
                        android:src="@drawable/affix_album" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6.0"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/save_here_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save in this album"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/save_here_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The Result will be saved in this album"
                            android:textColor="@color/md_grey_400"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/save_here_switch"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.0"
                        android:checked="false"
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:hapticFeedbackEnabled="true"
                        android:paddingRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_affix_format"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="15dp"
                    android:weightSum="10.0">

                    <ImageView
                        android:id="@+id/affix_format_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_weight="2.0"
                        android:src="@drawable/affix_compress" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8.0"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/compression_settings_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                            android:text="Compression settings"
                            android:textColor="@color/text_color"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/affix_format_sub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Available formats"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/md_grey_400"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/radio_format"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radio_jpeg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="JPEG" />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radio_png"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PNG" />

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radio_webp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WebP" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_affix_quality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="4dp"
                    android:weightSum="10.0">

                    <ImageView
                        android:id="@+id/affix_quality_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                        android:layout_weight="2.0"
                        android:src="@drawable/affix_quality" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8.0"
                        android:orientation="vertical"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/affix_quality_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"
                            android:text="Quality 90"
                            android:textColor="@color/text_color"
                            android:textSize="14sp" />

                        <SeekBar
                            android:id="@+id/seek_bar_quality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="90" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

